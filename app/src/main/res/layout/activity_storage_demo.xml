<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorageDemoActivity">


    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="openFile"
        android:text="@string/open_string" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button2"
        android:onClick="showLicences"
        android:text="@string/licences_string" />

    <TextView
        android:id="@+id/preview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button2"
        android:text="File metadata"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/fileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preview1"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/preview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fileText"
        android:text="First file bytes preview in ASCCI"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fileText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preview2"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:typeface="monospace" />

    <TextView
        android:id="@+id/preview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fileText2"
        android:text="Hex preview"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/hex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preview3"
        android:layout_alignParentLeft="true"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:typeface="monospace" />
</RelativeLayout>